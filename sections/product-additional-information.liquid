{%- capture description_tab %}
{% if product.description != blank %}
Description|{{ product.description }}|fa-solid fa-info-circle
{% endif %}
{% endcapture %}

{% capture downloads_tab %}
{% if product.metafields.custom.downloads.value != blank %}
Downloads|
<ul>
  {% for file in product.metafields.custom.downloads.value %}
    <li>
      <a href="{{ file.url }}" download>{{ file.url }}</a>
    </li>
  {% endfor %}
</ul>
|fa-solid fa-download
{% endif %}
{% endcapture %}

{% capture delivery_tab %}
{% if shop.metafields.custom.delivery_info != blank %}
Delivery|
<div class="delivery-section">
  {{ shop.metafields.custom.delivery_info | metafield_tag }}
</div>
|fa-solid fa-shipping-fast
{% endif %}
{% endcapture %}

{% assign all_tabs = '' %}

{% if description_tab != blank %}
  {% assign all_tabs = all_tabs | append: description_tab | append: '||TAB||' %}
{% endif %}

{% if downloads_tab != blank %}
  {% assign all_tabs = all_tabs | append: downloads_tab | append: '||TAB||' %}
{% endif %}

{% if delivery_tab != blank %}
  {% assign all_tabs = all_tabs | append: delivery_tab | append: '||TAB||' %}
{% endif %}

{% assign tabs = all_tabs | split: '||TAB||' %}

<div
  class="
    section
    section--page-width
    section-resource-list
    spacing-style
    gap-style
  "
  style="
    {%  render 'spacing-style', settings: section.settings %}
    {%  render 'gap-style', value: section.settings.gap %}
  "
>
  {% render 'tabs', tabs: tabs %}
</div>

{% stylesheet %}
  .delivery-section ul {
    list-style: none;
    padding-left: 0;
  }
  .delivery-section li {
    margin-bottom: 5px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product additional info",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "t:settings.product"
    },
    {
      "type": "header",
      "content": "t:content.section_layout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },

    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "t:names.product_recommendations",
      "category": "t:categories.products",
      "settings": {
        "product": "{{ closest.product }}",
        "section_width": "page-width",
        "padding-block-start": 48,
        "padding-block-end": 0
      }
    }
  ]
}
{% endschema %}
